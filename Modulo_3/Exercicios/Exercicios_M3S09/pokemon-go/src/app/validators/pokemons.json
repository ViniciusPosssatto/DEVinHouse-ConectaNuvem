{
    "$jsonSchema": {
        "bsonType": "object",
        "required": ["_id", "#", "Name", "Type 1", "HP", "Attack", "Defense", "Sp", "Speed", "Generation", "Legendary"],
        "properties": {
            "_id": {
                "bsonType": "objectId",
                "description": "id gerado pelo mongo"
            },
            "#": {
                "bsonType": "int",
                "description": "id específico do pokemon"
            },
            "Name": {
                "bsonType": "string",
                "description": "nome do pokemon"
            },
            "Type 1": {
                "bsonType": "string",
                "description": "Tipo de classe do pokemon"
            },
            "Type 2": {
                "bsonType": "string",
                "description": "Classe secundária do pokemon"
            },
            "HP": {
                "bsonType": "int",
                "description": "pontos de vida que o pokemon possui"
            },
            "Attack": {
                "bsonType": "int",
                "description": "Poder de atack do pokemon"
            },
            "Defense": {
                "bsonType": "int",
                "description": "Poder de defesa que o pokemon possui"
            },
            "Sp": {
                "bsonType": "object",
                "properties": {
                    "Atk": {
                        "bsonType": "int",
                        "description": "poder de atack aumentado"
                    },
                    "Def": {
                        "bsonType": "int",
                        "description": "Defesa aumentada"
                    }
                }
            },
            "Speed": {
                "bsonType": "int",
                "description": "Velocidade de atack do pokemon"
            },
            "Generation": {
                "bsonType": "int",
                "description": "Geração atual do pokemon"
            },
            "Legendary": {
                "bsonType": "bool",
                "description": "Se o pokemon é lendário ou não"
            }
        }
    }
}